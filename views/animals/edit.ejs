<%- include("../partials/header") %>

<div id="edit-1">
	<form class="page-form page-form-large container" action="/animals/<%= animal._id %>/?_method=PUT" method="POST">
		<h1 class="page-form__title">Edit Info: <%= animal.name %></h1>
		<div class="page-form__line">
			<label for="name" class="page-form__line--label">Animal Name</label>
			<input type="text" name="animal[name]" class="page-form__line--input" value="<%= animal.name %>">
		</div>
		<div class="page-form__line">
			<label for="image" class="page-form__line--label">Image Url</label>
			<input type="text" name="animal[image]" class="page-form__line--input" value="<%= animal.image %>">
		</div>
		<div class="page-form__line">
			<label for="sex" class="page-form__line--label">Sex</label>
			<input type="text" name="animal[sex]" class="page-form__line--input" value="<%= animal.sex %>">
		</div>
		<div class="page-form__line">
			<label for="age" class="page-form__line--label">Age</label>
			<input type="text" name="animal[age]" class="page-form__line--input" value="<%= animal.age %>">
		</div>
		<div class="page-form__line">
			<label for="breed" class="page-form__line--label">Breed</label>
			<input type="text" name="animal[breed]" class="page-form__line--input" value="<%= animal.breed %>">
		</div>
		<div class="page-form__line">
			<label for="weight" class="page-form__line--label">Weight</label>
			<input type="text" name="animal[weight]" class="page-form__line--input" value="<%= animal.weight %>">
		</div>
		<div class="page-form__line">
			<label for="description" class="page-form__line--label">Description</label>
			<textarea class="page-form__line--textarea" rows="5" name="animal[description]"><%= animal.description %></textarea>
		</div>
		<div class="page-form__line">
			<button class="btn btn-green">Edit Info</button>
		</div>
	</form>
</div>

<%- include("../partials/footer") %>